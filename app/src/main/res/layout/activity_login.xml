<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:srcCompat="@drawable/fondo_ola"
            android:scaleType="fitStart"
            android:layout_gravity="start"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/md_theme_light_onPrimary"
            android:text="Bienvenidos,tu música,a tu manera"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/md_theme_light_onPrimary"
            android:text="Iniciar Sesión"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
             />

        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/md_theme_dark_outline"
            android:text="Email o Username"
            android:layout_below="@+id/ic_logo"
            android:layout_alignLeft="@id/edt_email"
            />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_email"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/txt_contra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/md_theme_dark_outline"
            android:text="Contraseña"
            android:layout_below="@+id/edt_email"
            android:layout_alignLeft="@id/edt_email"
            />

        <EditText
            android:id="@+id/edt_contra"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_contra"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/edt_contra"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/ic_llave"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@mipmap/ic_llave"
                />

            <TextView
                android:id="@+id/txt_olvido_contra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/md_theme_dark_outline"
                android:text="Olvidaste tu contraseña?"

                />

            <TextView
                android:id="@+id/txt_recuperar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_surfaceTint"
                android:text="Recuperar"
                />

        </LinearLayout>




    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/edt_contra"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/ic_llave"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@mipmap/ic_llave"
            />
        <ImageView
            android:id="@+id/ic_llave"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@mipmap/ic_llave"
            />
        <ImageView
            android:id="@+id/ic_llave"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@mipmap/ic_llave"
            />

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/edt_contra"
        android:gravity="center"
        >


        <TextView
            android:id="@+id/txt_aun_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/md_theme_dark_outline"
            android:text="Aún no tienes cuenta?"

            />

        <TextView
            android:id="@+id/txt_inciar_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_light_surfaceTint"
            android:text="Inciar Sesión"
            />

    </LinearLayout>



</LinearLayout>