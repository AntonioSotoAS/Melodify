<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    >



        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:srcCompat="@drawable/fondo_ola"
            android:scaleType="fitStart"
            android:layout_gravity="start"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/md_theme_light_onPrimary"
            android:text="Bienvenidos,tu música,a tu manera"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/md_theme_light_onPrimary"
            android:text="Iniciar Sesión"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
             />

        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher" />




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_email"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ic_logo"
            android:layout_marginTop="30dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/md_theme_dark_outline"
            android:textColor="@color/md_theme_light_onTertiaryContainer"
            android:hint="Correo o Nombre Usuario"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_contra"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edt_email"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/md_theme_dark_outline"
            android:textColor="@color/md_theme_light_onTertiaryContainer"
            android:hint="Contraseña">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="18sp"
                />

        </com.google.android.material.textfield.TextInputLayout>








        <ImageView
            android:id="@+id/ic_llave"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@mipmap/ic_llave"
            android:layout_below="@+id/edt_contra"
            android:layout_alignLeft="@+id/edt_contra"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/txt_olvido_contra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/md_theme_dark_outline"
            android:text="Olvidaste tu contraseña?"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ic_llave"
            android:layout_below="@+id/edt_contra"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/txt_recuperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_light_surfaceTint"
            android:text="Recuperar"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/txt_olvido_contra"
            android:layout_below="@+id/edt_contra"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/bt_inciar_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:layout_below="@+id/ic_llave"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />




        <ImageView
                android:id="@+id/ic_facebook"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@mipmap/ic_facebook"
                android:layout_toLeftOf="@+id/ic_google"
                android:layout_below="@+id/bt_inciar_sesion"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:id="@+id/ic_google"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@mipmap/ic_google"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/bt_inciar_sesion"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:id="@+id/ic_twiter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@mipmap/ic_twiter"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/ic_google"
                android:layout_below="@+id/bt_inciar_sesion"
                android:layout_marginTop="15dp"
                />





            <TextView
                android:id="@+id/txt_aun_cuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/md_theme_dark_outline"
                android:text="Aún no tienes cuenta?"
                android:layout_below="@+id/ic_google"
                android:layout_alignLeft="@+id/txt_olvido_contra"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/txt_registrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_surfaceTint"
                android:text="Registrate"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/ic_google"
                android:layout_toRightOf="@+id/txt_aun_cuenta"
                android:layout_marginTop="10dp"
                />





</RelativeLayout>